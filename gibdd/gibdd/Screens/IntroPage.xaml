<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gibdd.IntroPage">
 
        <StackLayout>
            <ListView x:Name="listProfiles" ItemsSource="{Binding}" ItemSelected="toMainPage">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <StackLayout>
                                    <Label Text="{Binding fio, StringFormat='Ф.И.О. {0}'}" />
                                    <Label Text="{Binding email, StringFormat='Адрес электронной почты {0}'}" />
                                </StackLayout>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Создать профиль" Clicked="createProfile"/>
        </StackLayout>
    
</ContentPage>